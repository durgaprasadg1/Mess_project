<%- layout("/layouts/boilerplate") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4">
          <h3 class="text-center fw-bold text-primary mb-4">
            <i class="bi bi-clipboard-plus me-2"></i> Add Mess Menu
          </h3>

          <form
            method="post"
            novalidate
            action="/mess/<%= id %>/menu"
            class="needs-validation"
          >
            <!-- Dish Inputs -->
            <% for (let i = 1; i <= 5; i++) { %>
            <div class="mb-3">
              <label for="dish<%= i %>" class="form-label fw-semibold"
                >Dish <%= i %></label
              >
              <input type="text" class="form-control" id="dish<%= i %>"
              name="dish<%= i %>" placeholder="e.g. Puri Bhaji" <%= i === 1 ?
              "required" : "" %> /> <% if (i === 1) { %>
              <div class="invalid-feedback">Add at least one dish</div>
              <% } %>
            </div>
            <% } %>

            <!-- Price -->
            <div class="mb-3">
              <label for="price" class="form-label fw-semibold"
                >Price (â‚¹)</label
              >
              <input
                type="number"
                class="form-control"
                id="price"
                name="price"
                required
                placeholder="Enter Price"
              />
              <div class="invalid-feedback">Add the price</div>
            </div>

            <!-- Submit -->
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-plus-circle me-2"></i> Add Menu
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
