<%- layout("/layouts/boilerplate") %>

<!-- Loader -->
<div id="loader" class="d-flex justify-content-center align-items-center" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: #fff7e6; z-index: 9999; opacity: 1;">
  <div class="spinner-grow text-warning" role="status">
    <span class="visually-hidden">Loading...</span>
  </div>
</div>

<style>
  :root {
    --primary-color: #ff8c00;        
    --secondary-color: #ffb300;      
    --bg-light: #fff7e6;              
    --text-dark: #4d2600;             
  }

  body {
    background-color: var(--bg-light);
  }

  .card {
    border: none;
    border-radius: 1rem;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
  }
  
  .card-body {
    padding: 2rem;
  }
  
  h3 {
    font-size: 1.75rem;
    color: var(--primary-color);
  }

  .form-control {
    border-radius: 0.5rem;
    border: 1px solid var(--secondary-color);
    transition: border-color 0.3s ease;
  }
  
  .form-control:focus {
    border-color: var(--primary-color);
    box-shadow: none;
  }
  
  .btn-primary {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    border: none;
    border-radius: 50px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .btn-primary:hover {
    transform: scale(1.05);
    box-shadow: 0 0.8rem 1.5rem rgba(0, 0, 0, 0.2);
  }
  
  .btn-secondary {
    border-radius: 50px;
  }
  
  .menu-item {
    position: relative;
    animation: fadeIn 0.5s ease-in-out;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  .btn-danger {
    font-size: 0.85rem;
  }
</style>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card shadow-lg">
        <div class="card-body">
          <h3 class="text-center fw-bold mb-4">
            <i class="bi bi-clipboard-plus me-2"></i> Add Mess Menu
          </h3>

          <form method="post" novalidate action="/mess/<%= id %>/menu" class="needs-validation">
            <div id="menu-container">
              <div class="mb-3 menu-item">
                <input type="text" class="form-control" name="menu[]" placeholder="e.g. Puri Bhaji" required />
                <div class="invalid-feedback">Add at least one dish</div>
                <button type="button" class="btn btn-sm btn-danger mt-2" onclick="removeDish(this)">Remove</button>
              </div>
            </div>
            <button type="button" class="btn btn-secondary mb-3" onclick="addDish()">
              Add Dish
            </button>

            <div class="mb-3">
              <label for="price" class="form-label fw-semibold">Price (â‚¹)</label>
              <input type="number" class="form-control" id="price" name="price" required placeholder="Enter Price" />
              <div class="invalid-feedback">Add the price</div>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-plus-circle me-2"></i> Add Menu
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  window.addEventListener("load", function () {
    const loader = document.getElementById("loader");
    loader.style.transition = "opacity 0.5s ease";
    loader.style.opacity = "0";
    loader.style.zIndex = -99;
    setTimeout(() => loader.style.display = "none", 500);
  });

  function addDish() {
    const container = document.getElementById('menu-container');
    const div = document.createElement('div');
    div.className = 'mb-3 menu-item';
    div.innerHTML = `
      <input type="text" class="form-control" name="menu[]" placeholder="e.g. Dish Name" required />
      <button type="button" class="btn btn-sm btn-danger mt-2" onclick="removeDish(this)">Remove</button>
    `;
    container.appendChild(div);
  }

  function removeDish(button) {
    button.parentElement.remove();
  }
</script>