<div class="d-flex align-items-center justify-content-between mb-3">
  <h4 class="fw-bold text-primary mb-0">
    <i class="bi bi-egg-fried me-2"></i> Today's Menu (<%= mess.mealTime %>)
  </h4>
  <div class="btn-group">
    <% if (mess.vegMenu && mess.vegMenu.length > 0) { %>
    <button
      class="btn btn-sm btn-success"
      onclick="document.getElementById('veg-menu').scrollIntoView({behavior:'smooth', block:'start'})"
    >
      Today's Veg Menu
    </button>
    <% } %> <% if (mess.nonVegMenu && mess.nonVegMenu.length > 0) { %>
    <button
      class="btn btn-sm btn-danger"
      onclick="document.getElementById('nonveg-menu').scrollIntoView({behavior:'smooth', block:'start'})"
    >
      Today's Non Veg Menu
    </button>
    <% } %>
  </div>
</div>

<% if (mess.vegMenu && mess.vegMenu.length > 0) { %>
<div id="veg-menu">
  <h5 class="text-success mb-3 fw-semibold">
    <i class="bi bi-leaf me-2"></i> Veg Menu
  </h5>
  <% if (mess.vegPrice) { %>
  <p class="fw-bold fs-5 mt-3">Price: ₹ <%= mess.vegPrice %></p>
  <% } %>
  <div class="row g-3 mb-4">
    <% mess.vegMenu.forEach(dish => { %> <% if (typeof dish === 'string') { %>
    <% if (dish.trim()) { %>
    <div class="col-12 col-md-6">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body d-flex align-items-center justify-content-center">
          <h6 class="mb-0 fw-semibold text-dark"><%= dish %></h6>
        </div>
      </div>
    </div>
    <% } %> <% } else { %>
    <div class="col-12">
      <div class="card shadow-sm border-0 mb-3">
        <div class="card-body">
          <h6 class="fw-bold text-dark">
            <%= dish.name || 'Dish' %> <% if (dish.price) { %>
            <span class="text-muted small"> — ₹ <%= dish.price %></span>
            <% } %>
          </h6>
          <% if (dish.items && dish.items.length > 0) { %>
          <ul class="list-unstyled mb-0">
            <% dish.items.forEach(it => { %>
            <li class="d-flex justify-content-between py-1 border-bottom">
              <span><%= it.name %></span>
              <span class="fw-semibold">₹ <%= it.price %></span>
            </li>
            <% }) %>
          </ul>
          <% } %>
        </div>
      </div>
    </div>
    <% } %> <% }) %>
  </div>
</div>
<% } %>

<hr />
<hr />

<% if (mess.nonVegMenu && mess.nonVegMenu.length > 0) { %>
<div id="nonveg-menu">
  <h5 class="text-danger mb-3 fw-semibold">
    <i class="bi bi-basket2-fill me-2"></i> Non-Veg Menu
  </h5>
  <% if (mess.nonVegPrice) { %>
  <p class="fw-bold fs-5 mt-3">Price: ₹ <%= mess.nonVegPrice %></p>
  <% } %>
  <div class="row g-3">
    <% mess.nonVegMenu.forEach(dish => { %> <% if (typeof dish === 'string') {
    %> <% if (dish.trim()) { %>
    <div class="col-12 col-md-6">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body d-flex align-items-center justify-content-center">
          <h6 class="mb-0 fw-semibold text-dark"><%= dish %></h6>
        </div>
      </div>
    </div>
    <% } %> <% } else { %>
    <div class="col-12">
      <div class="card shadow-sm border-0 mb-3">
        <div class="card-body">
          <h6 class="fw-bold text-dark"><%= dish.name || 'Dish' %></h6>
          <% if (dish.items && dish.items.length > 0) { %>
          <ul class="list-unstyled mb-0">
            <% dish.items.forEach(it => { %>
            <li class="d-flex justify-content-between py-1 border-bottom">
              <span><%= it.name %></span>
              <span class="fw-semibold">₹ <%= it.price %></span>
            </li>
            <% }) %>
          </ul>
          <% } %>
        </div>
      </div>
    </div>
    <% } %> <% }) %>
  </div>
</div>
<% } %>
