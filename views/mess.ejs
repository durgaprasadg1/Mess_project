
<div
  id="loader"
  class="d-flex justify-content-center align-items-center"
  style="
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: white;
    z-index: 9999;
    opacity: 1;
  "
>
  <div class="spinner-grow text-primary" role="status">
    <span class="visually-hidden">Loading...</span>
  </div>
</div>
<%- layout("/layouts/boilerplate") %>
<style>
  .card-container {
    height: 200px;
    position: relative;
    overflow: hidden;
  }
  .card-img-top {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  .hover-effect {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .hover-effect:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
  }
</style>


<div class="container my-5">
  <div class="row g-4">
    <% if (messes && messes.length > 0) { %>
    <h2 class="text-center fw-bold mb-5 text-primary">Mess Near You</h2>
    <% messes.forEach(mess => { %>
    <div class="col-12 col-md-6 col-lg-4 d-flex">
      <a
        href="/mess/<%= mess.id %>"
        class="text-decoration-none text-dark d-flex w-100"
      >
        <div class="card shadow-sm border-0 w-100 h-100 hover-effect">
          <div class="card-container">
            <img
              src="<%= mess.image.url %>"
              class="card-img-top"
              alt="<%= mess.name %>"
            />
          </div>
          <div
            class="card-body d-flex flex-column justify-content-center align-items-center text-center"
          >
            <h5 class="card-title fw-bold mb-1"><%= mess.name %></h5>
            <p class="text-muted small mb-2"><%= mess.category %></p>
            <p class="text-muted small mb-2"> <%= mess.address %></p>
            <p class="text-muted  mb-2">‚≠ê<%= mess.avgRating %> / 5 </p>
            <span
              class="badge rounded-pill bg-<%= mess.isOpen ? 'success' : 'danger' %>"
            >
              <%= mess.isOpen ? 'Open' : 'Closed' %>
            </span>
          </div>
        </div>
      </a>
    </div>
    <% }) %> <% } else { %>
    <div class="col-12">
      <div class="alert alert-info text-center shadow-sm">
        No messes available near you right now.
      </div>
    </div>
    <% } %>
  </div>
</div>

<script>
   window.addEventListener("load", function () {
    const loader = document.getElementById("loader");
    loader.style.transition = "opacity 0.5s ease";
    loader.style.opacity = "0";
    loader.style.zIndex = -99;
    setTimeout(() => loader.style.display = "none", 500);
  });
</script>
