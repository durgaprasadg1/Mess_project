<% layout("/layouts/boilerplate") %>
<div
  id="loader"
  class="d-flex justify-content-center align-items-center"
  style="
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: white;
    z-index: 9999;
    opacity: 1;
  "
>
  <div class="spinner-grow text-primary" role="status">
    <span class="visually-hidden">Loading...</span>
  </div>
</div>
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4 p-md-5">
          <h3 class="text-center mb-4 fw-bold text-primary">
            <i class="bi bi-key-fill me-2"></i> Reset Password
          </h3>
          <p class="text-center text-muted mb-4">
            Enter your new password below.
          </p>

          <form action="/login/reset/<%= token %>" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
              <label for="password" class="form-label fw-semibold">New Password</label>
              <input
                type="password"
                name="password"
                id="password"
                class="form-control"
                placeholder="Enter new password"
                required
              />
              <div class="invalid-feedback">Please enter your new password.</div>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg shadow-sm mt-3">
                <i class="bi bi-check-circle-fill me-2"></i> Reset Password
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  window.addEventListener("load", function () {
    document.getElementById("loader").style.opacity = "0";
    document.getElementById("loader").style.zIndex = -99;
  });
</script>
