<% layout("/layouts/boilerplate") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4 p-md-5">
          <h3 class="text-center mb-4 fw-bold text-primary">
            <i class="bi bi-question-circle-fill me-2"></i> Forgot Password
          </h3>
          <p class="text-center text-muted mb-4">
            Enter your account's email address and we will send you a link to reset your password.
          </p>

          <form action="/login/forget" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
              <label for="email" class="form-label fw-semibold">Email Address</label>
              <input
                type="email"
                name="email"
                id="email"
                class="form-control"
                placeholder="youremail@example.com"
                required
              />
              <div class="invalid-feedback">Please enter a valid email address.</div>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg shadow-sm mt-3">
                <i class="bi bi-envelope-check me-2"></i> Send Reset Link
              </button>
            </div>
          </form>
          
          <div class="text-center mt-4">
            <a href="/login" class="text-decoration-none small fw-semibold text-muted hover-primary">
              <i class="bi bi-arrow-left"></i> Back to Login
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>