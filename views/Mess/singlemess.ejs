<div
  id="loader"
  class="d-flex justify-content-center align-items-center"
  style="
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: white;
    z-index: 9999;
    opacity: 1;
  "
>
  <div class="spinner-grow text-primary" role="status">
    <span class="visually-hidden">Loading...</span>
  </div>
</div>
<%- layout("/layouts/boilerplate") %>

<div class="container my-5">
  <div class="row g-4">
    <% if (messes && messes.length > 0) { %>
       <h2 class="text-center fw-bold mb-5 text-primary">Mess Near You</h2>
      <% messes.forEach(mess => { %>
        <div class="col-12 col-md-6 col-lg-4">
          <a href="/mess/<%= mess.id %>" class="text-decoration-none text-dark">
            <div class="card shadow-sm border-0  h-100 overflow-hidden hover-shadow transition">
              <div class="position-relative">
                <img
                  src="<%= mess.image.url %>"
                  class="card-img-top"
                  alt="<%= mess.name %>"
                  style="object-fit: cover; height: 200px;"
                />
                <div class="card-img-overlay d-flex align-items-end p-2">
                  <h5 class="card-title text-white bg-dark bg-opacity-50 px-2 py-1 rounded">
                    <%= mess.name %>
                  </h5>
                </div>
              </div>

              <div class="card-body text-center">
                <h6 class="fw-bold"><%= mess.name %></h6>
                 <h6 class="card-title text-white bg-dark bg-opacity-50 px-2 py-1 rounded">
                  <%= mess.category %>
                </h6>
                <p class="text-muted small mb-0">Click to view details</p>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <div class="alert alert-info text-center shadow-sm">
          No messes available near you right now.
        </div>
      </div>
    <% } %>
  </div>
</div>

<script>
   window.addEventListener("load", function () {
    const loader = document.getElementById("loader");
    loader.style.transition = "opacity 0.5s ease";
    loader.style.opacity = "0";
    loader.style.zIndex = -99;
    setTimeout(() => loader.style.display = "none", 500);
  });
</script>
