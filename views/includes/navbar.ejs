<script>
document.addEventListener("DOMContentLoaded", () => {
  const profileDropdownToggle = document.getElementById("profileDropdown");
  const profileInfoDropdown = document.getElementById("profile-info-dropdown");

  const setActiveNavLink = () => {
    const navLinks = document.querySelectorAll('.nav-link-custom');
    const currentPath = window.location.pathname;

    navLinks.forEach(link => {
      link.classList.remove('active');

      const linkHref = link.getAttribute('href');

      if (linkHref === '/mess' && (currentPath === '/mess' || currentPath === '/')) {
        link.classList.add('active');
      }
      else if (linkHref !== '/mess' && currentPath.startsWith(linkHref)) {
        link.classList.add('active');
      }
    });
  };

  setActiveNavLink();

  profileDropdownToggle.addEventListener("show.bs.dropdown", async (e) => {
    const consumerId = profileDropdownToggle.getAttribute("data-consumer-id");
    if (!consumerId) {
      profileInfoDropdown.innerHTML = `<p class="text-danger mb-0">No user ID found.</p>`;
      return;
    }

    profileInfoDropdown.innerHTML = `
      <div class="text-center my-2">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>
    `;

    try {
      const res = await fetch(`/consumer/${consumerId}/info`);
      const data = await res.json();

      if (data.error) {
        profileInfoDropdown.innerHTML = `<p class="text-danger mb-0">${data.error}</p>`;
      } else {
        profileInfoDropdown.innerHTML = `
          <h5 class="fw-bold mb-2 text-primary">${data.username}</h5>
          <p class="mb-1 text-secondary"><b>Email:</b> <span class="text-dark">${data.email}</span></p>
          <p class="mb-1 text-secondary"><b>Phone:</b> <span class="text-dark">${data.phone}</span></p>
          <p class="mb-1 text-secondary"><b>Messes:</b> <span class="badge bg-info-subtle text-info">${data.mess?.length || 0}</span></p>
          <p class="mb-1 text-secondary"><b>Orders:</b> <span class="badge bg-success-subtle text-success">${data.orders?.length || 0}</span></p>
          <p class="mb-0 text-secondary"><b>Reviews:</b> <span class="badge bg-warning-subtle text-warning">${data.reviews?.length || 0}</span></p>
        `;
      }
    } catch (err) {
      console.error("Error fetching consumer info:", err);
      profileInfoDropdown.innerHTML = "<p class='text-danger mb-0'>Error fetching consumer info</p>";
    }
  });
});
</script>