<style>
  /* Navbar base */
  .navbar {
    background: #ffffff !important;
    border-bottom: 1px solid #e9ecef;
    padding: 0.9rem 1rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  /* Brand */
  .navbar-brand {
    font-weight: 700;
    font-size: 1.6rem;
    color: #0d6efd !important;
    display: flex;
    align-items: center;
    letter-spacing: 0.5px;
    transition: color 0.2s ease-in-out;
  }
  .navbar-brand i {
    margin-right: 10px;
    color: #ffc107; /* golden accent */
    font-size: 1.4rem;
  }
  .navbar-brand:hover {
    color: #084298 !important;
  }

  /* Nav links */
  .nav-link {
    font-weight: 500;
    margin: 0 8px;
    color: #495057 !important;
    transition: all 0.25s ease-in-out;
    padding: 6px 14px;
    border-radius: 20px;
  }
  .nav-link:hover {
    background: #f1f5ff;
    color: #0d6efd !important;
  }

  /* Search box */
  .search-box {
    display: flex;
    align-items: center;
    background: #f8fafc;
    border-radius: 30px;
    padding: 4px 14px;
    border: 1px solid #dee2e6;
    transition: all 0.25s;
  }
  .search-box:focus-within {
    border-color: #0d6efd;
    box-shadow: 0 0 5px rgba(13, 110, 253, 0.25);
  }
  #search-input {
    border: none;
    background: transparent;
    outline: none;
    width: 200px;
    padding: 6px;
    font-size: 0.95rem;
    color: #212529;
  }
  .btn-search {
    border: none;
    background: none;
    color: #0d6efd;
    font-size: 1.1rem;
    cursor: pointer;
    transition: transform 0.2s ease;
  }
  .btn-search:hover {
    color: #084298;
    transform: scale(1.1);
  }

  /* User info */
  .user-info {
    display: flex;
    align-items: center;
    background: #f8f9fa;
    padding: 6px 14px;
    border-radius: 25px;
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.05);
  }
  .user-info i {
    margin-right: 8px;
    color: #0d6efd;
  }
  .user-info h6 {
    margin: 0;
    font-size: 0.95rem;
    font-weight: 600;
    color: #212529;
  }

  /* Responsive tweaks */
  @media (max-width: 768px) {
    #search-input {
      width: 120px;
    }
    .user-info {
      margin-top: 10px;
    }
  }
</style>

<nav class="navbar navbar-expand-md sticky-top">
  <div class="container">
    <!-- Logo / Brand -->
    <a class="navbar-brand" href="/mess">
      <i class="fa-solid fa-utensils"></i> MyMess
    </a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#messNavbar"
      aria-controls="messNavbar"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="messNavbar">
      <!-- Left Menu -->
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="/mess">Home</a>
        </li>
        <% if(currentUser){ %>
        <li class="nav-item">
          <a class="nav-link" href="/mess/new">Add Your Mess</a>
        </li>
        <% if(currentUser && noOfMess > 0){ %>
        <li class="nav-item">
          <a class="nav-link" href="/mess/<%= currentUser.mess[0] %>/orders"
            >Orders</a
          >
        </li>
        <% } %>
        <a class="nav-link" href="/consumer/<%= currentUser._id %>/History"
            >History</a
          >
        
        <% } %>
      </ul>

      <!-- Search -->
      <form class="d-flex mx-3" role="search">
        <div class="search-box">
          <input type="search" placeholder="Search Mess..." id="search-input" />
          <button class="btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </div>
      </form>

      <!-- Right Menu -->
      <ul class="navbar-nav">
        <% if(currentUser){ %>
        <div class="user-info mx-2">
          <i class="fa-solid fa-user"></i>
          <h6><%= currentUser.username %></h6>
        </div>
        <li class="nav-item">
          <a
            class="nav-link btn btn-outline-danger px-3 py-1 ms-2"
            href="/login/logout"
            >Log Out</a
          >
        </li>
        <% } else { %>
        <li class="nav-item">
          <a class="nav-link" href="/signup">Sign Up</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/login">Login</a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
