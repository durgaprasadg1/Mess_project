<% if(success && success.length) { %>

  <div class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-1" role="alert">
    <h4 class="alert-heading"><%=success%></h4>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>

<%}%>

<% if(error && error.length) { %>

  <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-1" role="alert">
    <h4 class="alert-heading"><%=error%></h4>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>

<%}%>

