<%- layout("/layouts/boilerplate") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-9">

      <div class="card shadow-lg border-0 rounded-3 mb-4">
        <div class="card-body text-center p-4">
          <h2 class="fw-bold text-primary mb-2"><%= mess.name %></h2>

          <h6 class="card-subtitle text-secondary bg-light px-3 py-1 rounded d-inline-block mb-3">
            (<%= mess.category %>)
          </h6>

          <p class="text-muted mb-3"><%= mess.description %></p>

          <p class="text-muted mb-2">
            <i class="bi bi-person-fill me-1 text-secondary"></i>
            Owned by: <strong>@<%= mess.owner.username %></strong>
          </p>

          <p class="mb-3 fw-semibold">
            <i class="fa-solid fa-location-dot me-1"></i>
            <%= mess.address %>
          </p>

          <p class="mb-3 text-muted">
            <strong>Latitude:</strong> <%= mess.lat %> <br>
            <strong>Longitude:</strong> <%= mess.lon %>
          </p>

          <% if (mess.isOpen) { %>
            <span class="badge bg-success fs-6 px-3 py-2">Opened</span>
          <% } else { %>
            <span class="badge bg-danger fs-6 px-3 py-2">Closed</span>
          <% } %>

          <% if (mess.price) { %>
            <p class="fw-bold fs-5 text-success mt-3">Price: â‚¹ <%= mess.price %></p>
          <% } %>

          <% if (mess.menu && mess.menu.length > 0) { %>
            <h5 class="fw-semibold mt-4 text-primary">Menu</h5>
            <div class="row g-3 mt-2">
              <% mess.menu.forEach(item => { %>
                <% if (item !== "") { %>
                  <div class="col-12 col-md-6">
                    <div class="card shadow-sm border-0 h-100">
                      <div class="card-body d-flex align-items-center justify-content-center">
                        <h6 class="mb-0 fw-semibold text-dark"><%= item %></h6>
                      </div>
                    </div>
                  </div>
                <% } %>
              <% }) %>
            </div>
          <% } %>
        </div>
      </div>

      <% if (currentUser) { %>
        <div class="d-flex flex-column flex-md-row gap-3 mb-4">
          <% if (isOwner && currentUser.mess.length > 0) { %>
            <a href="/mess/<%= currentUser.mess[0]._id %>/closeOpen" 
               class="btn <%= mess.isOpen ? 'btn-danger' : 'btn-success' %> flex-fill">
              <i class="bi <%= mess.isOpen ? 'bi-x-circle' : 'bi-check-circle' %> me-1"></i>
              <%= mess.isOpen ? "Close It" : "Open It" %>
            </a>

            <form method="get" action="/mess/<%= mess._id %>/menu" class="flex-fill">
              <button type="submit" class="btn btn-outline-primary w-100">
                <i class="bi bi-plus-circle me-2"></i> Add Menu
              </button>
            </form>

            <form method="post" action="/mess/<%= mess._id %>/delete?_method=DELETE" class="flex-fill">
              <button type="submit" class="btn btn-outline-danger w-100">
                <i class="bi bi-trash me-2"></i> Delete Mess
              </button>
            </form>

            <a href="/mess/<%= mess._id %>/edit" class="btn btn-outline-warning flex-fill">
              <i class="bi bi-pencil-square me-2"></i> Edit Mess Info
            </a>
          <% } %>

          <% if (mess.isOpen && mess.menu.length > 0) { %>
            <form method="post" action="/mess/<%= mess._id %>/booking" class="flex-fill">
              <button type="submit" class="btn btn-success w-100">
                <i class="bi bi-calendar-check me-2"></i> Book Your Plate
              </button>
            </form>
          <% } %>
        </div>
      <% } %>

      <% if (currentUser) { %>
        <div class="card shadow-sm border-0 rounded-3 mb-4">
          <div class="card-body p-4">
            <h4 class="fw-bold mb-3">Leave a Review</h4>
            <form method="POST" action="/mess/<%= mess._id %>/review" novalidate class="needs-validation">
              <div class="mb-3">
                <label class="form-label fw-semibold">Rating</label>
                <fieldset class="starability-slot">
                  <% for (let i = 1; i <= 5; i++) { %>
                    <input type="radio" id="rate-<%= i %>" name="reviews[rating]" value="<%= i %>" <%= i===1 ? "required" : "" %> />
                    <label for="rate-<%= i %>" title="<%= i %> star"><%= i %> star</label>
                  <% } %>
                </fieldset>
              </div>
              <div class="mb-3">
                <label for="reviewComment" class="form-label fw-semibold">Comment</label>
                <textarea name="reviews[feedback]" id="reviewComment" rows="4" class="form-control" placeholder="Write your experience..." required></textarea>
              </div>
              <div class="d-grid">
                <button class="btn btn-success">Submit Review</button>
              </div>
            </form>
          </div>
        </div>
      <% } %>

      <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-4">
          <h4 class="fw-bold mb-3">All Reviews</h4>
          <div class="row g-3">
            <% mess.reviews.forEach(rev => { %>
              <div class="col-12 col-md-6">
                <div class="card shadow-sm border-0 rounded-3 h-100">
                  <div class="card-body">
                    <h6 class="card-title text-primary mb-2">
                      <i class="bi bi-person-circle me-1"></i> @<%= rev.author.username %>
                    </h6>
                    <p class="starability-result mb-2" data-rating="<%= rev.rating %>"></p>
                    <p class="card-text"><%= rev.feedback %></p>
                  </div>
                  <div class="card-footer bg-transparent border-0 text-end">
                    <form method="post" action="/mess/<%= mess._id %>/review/<%= rev._id %>?_method=DELETE">
                      <button class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i> Delete
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
