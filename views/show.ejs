<%- layout("/layouts/boilerplate") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <!-- Mess Details -->
      <div class="card shadow-lg border-0 rounded-3 mb-4">
        <div class="card-body p-4 text-center">
          <h2 class="fw-bold text-primary mb-2"><%= mess.name %></h2>
          <h6 class="card-title text-dark bg-opacity-50 px-2 py-1 rounded">
            ( <%= mess.category %> )
          </h6>
          <p class="text-muted mb-2"><%= mess.description %></p>
          <p class="text-muted mb-2">
            <i class="bi bi-person-fill me-1 text-secondary"></i>
            Owned by : @<strong><%= mess.owner.username %></strong>
          </p>
          <p class="mb-3">
            <i class="bi bi-geo-alt-fill me-1 text-danger"></i>
            <%= mess.address %>
          </p>

          <!-- Menu -->
          <h5 class="fw-semibold mt-4 text-primary">Menu</h5>
          <div class="row g-3">
            <% for (let i = 0; i < mess.menu.length; i++) { %> <% if
            (mess.menu[i] !== "") { %>
            <div class="col-12 col-md-6">
              <div class="card shadow-sm border-0 h-100 menu-item">
                <div class="card-body d-flex align-items-center">
                  <h6 class="mb-0 fw-semibold"><%= mess.menu[i] %></h6>
                </div>
              </div>
            </div>
            <% } %> <% } %>
          </div>

          <p class="fw-bold fs-5 text-success">Price: â‚¹ <%= mess.price %></p>
        </div>
      </div>

      <% if (currentUser) { %>
      <div class="d-flex flex-column flex-sm-row gap-3 mb-4">
        <% if (isOwner) { %>
        <form
          method="get"
          action="/mess/<%= mess._id %>/menu"
          class="flex-fill"
        >
          <button type="submit" class="btn btn-outline-primary w-100">
            <i class="bi bi-plus-circle me-2"></i> Add Menu
          </button>
        </form>
        <form
          method="post"
          action="/mess/<%= mess._id %>/delete?_method=DELETE"
          class="flex-fill"
        >
          <button type="submit" class="btn btn-danger w-100">
            <i class="bi bi-trash me-2"></i> Delete Mess
          </button>
        </form>
        <% } %>
        <form
          method="post"
          action="/mess/<%= mess._id %>/booking"
          class="flex-fill"
        >
          <button type="submit" class="btn btn-success w-100">
            <i class="bi bi-calendar-check me-2"></i> Book Your Plate
          </button>
        </form>
      </div>
      <% } %>

      <!-- Review Form -->
      <% if (currentUser) { %>
      <div class="card shadow-sm border-0 rounded-3 mb-4">
        <div class="card-body p-4">
          <h4 class="fw-bold mb-3">Leave a Review</h4>
          <form
            method="POST"
            action="/mess/<%= mess._id %>/review"
            novalidate
            class="needs-validation"
          >
            <!-- Rating -->
            <div class="mb-3">
              <label class="form-label fw-semibold">Rating</label>
              <fieldset class="starability-slot">
                <input
                  type="radio"
                  id="first-rate1"
                  name="reviews[rating]"
                  value="1"
                  required
                />
                <label for="first-rate1" title="Terrible">1 star</label>

                <input
                  type="radio"
                  id="first-rate2"
                  name="reviews[rating]"
                  value="2"
                />
                <label for="first-rate2" title="Not good">2 stars</label>

                <input
                  type="radio"
                  id="first-rate3"
                  name="reviews[rating]"
                  value="3"
                />
                <label for="first-rate3" title="Average">3 stars</label>

                <input
                  type="radio"
                  id="first-rate4"
                  name="reviews[rating]"
                  value="4"
                />
                <label for="first-rate4" title="Very good">4 stars</label>

                <input
                  type="radio"
                  id="first-rate5"
                  name="reviews[rating]"
                  value="5"
                />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>

            <!-- Comment -->
            <div class="mb-3">
              <label for="reviewComment" class="form-label fw-semibold"
                >Comment</label
              >
              <textarea
                name="reviews[feedback]"
                id="reviewComment"
                cols="30"
                rows="4"
                class="form-control"
                placeholder="Write your experience..."
                required
              ></textarea>
            </div>

            <div class="d-grid">
              <button class="btn btn-success">Submit Review</button>
            </div>
          </form>
        </div>
      </div>
      <% } %>

      <!-- All Reviews -->
      <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-4">
          <h4 class="fw-bold mb-3">All Reviews</h4>
          <div class="row g-3">
            <% for (let rev of mess.reviews) { %>
            <div class="col-12 col-md-6">
              <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body">
                  <h6 class="card-title text-primary mb-2">
                    <i class="bi bi-person-circle me-1"></i>
                    @<%= rev.author.username %>
                  </h6>
                  <p
                    class="starability-result mb-2"
                    data-rating="<%= rev.rating %>"
                  ></p>
                  <p class="card-text"><%= rev.feedback %></p>
                </div>
                <div class="card-footer bg-transparent border-0 text-end">
                  <form
                    method="post"
                    action="/mess/<%= mess._id %>/review/<%= rev._id %>?_method=DELETE"
                  >
                    <button class="btn btn-sm btn-outline-danger">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

